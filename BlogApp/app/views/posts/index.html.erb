<%= render "partials/nav" %>

<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Jeremy's Blog
              <br />
                <small>@jeremypross</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <% @posts.each do |post| %>
      <!-- Post One -->
      <div class="row">
          <div class="col-md-7">
              <a href="#">
                  <img class="img-responsive img-rounded" src="<%= post.post_image %>" alt="">
              </a>
          </div>
          <div class="col-md-5">
              <h3><%= post.title %></h3>
              <p><%= simple_format(post.post_text) %></p>
              <a class="btn btn-primary" href="<%= post_path(post.id) %>">View Post <span class="glyphicon glyphicon-chevron-right"></span></a>
              <a class="btn btn-primary" href="/posts/<%= post.id %>/edit">Edit Post <span class="glyphicon glyphicon-chevron-right"></span></a>
          </div>
      </div>
      <!-- /.row -->

    <hr>
    <% end %>


    <!-- Pagination -->
    <div class="text-center">
        Pagination Here
    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Jeremy Ross 2017</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

</div>
<!-- /.container -->

<!-- jQuery -->
<script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
